<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		 <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

		<title>Students</title>

		<!-- Bootstrap -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    </head>
	<body>
		
		<nav class="navbar navbar-expand-sm bg-light navbar-light">
		  <ul class="navbar-nav">
		    <li class="nav-item active">
		      <a class="nav-link" href="/">Home</a>
		    </li>
		    <li class="nav-item active">
		      <a class="nav-link" href="/departments">Departments</a>
		    </li>
		    <li class="nav-item active">
		      <a class="nav-link" href="/instructors">Instructors</a>
		    </li>
		    <li class="nav-item active">
		      <a class="nav-link" href="/students">Students</a>
		    </li>
		    <li class="nav-item active">
		      <a class="nav-link" href="/sections">Sections</a>
		    </li>
		    <li class="nav-item active">
		      <a class="nav-link" href="/teaches">Teaches</a>
		    </li>
		  </ul>
		</nav>
		<div class="jumbotron">
		  <h1 style="text-align: center;">List of Students</h1>
		  <form action="/students/search" method="get">
			<label for="fname">Enter Student Id to search for a particular Student:</label>
			<input type="text" id="fname" name="student_id">
			<input type="submit" value="Search" class="btn btn-primary">
		</form>
		    <table class="table table-striped">
		    	<thead>
		    <tr>
		      <th>ID</th>
		      <th>Name</th>
		      <th>Total Credits</th>
		      <th>Instructor ID</th>
		      <th>Department Name</th>
		      <th>Delete</th>
		      <th>Update</th>
		    </tr>
		    </thead>
		    <tbody>
		    <% students.forEach((student) => {%>
		    <tr>
		      <td><%=student.id%></td>
		      <td><%=student.name%></td>
		      <td><%=student.total_credits%></td>
		      <td><a href="/students/<%=student.id%>/advisor"><%=student.instructor_id%></a></td>
		      <td><a href="/students/<%=student.department_name%>/department"><%=student.department_name%></a></td>
		      <td>
		        <form action="/students/<%=student.id%>/delete" method ="POST">
		          <button class ="btn btn-danger">Delete</button>
		        </form>
		      </td>
		      <td>
		        <form action="/students/<%=student.id%>/update" method ="GET">
		          <button class ="btn btn-primary">Update</button>
		        </form>
		      </td>
		    </tr>
		    <%})%>
		    </tbody>
		    </table>

		    <a href="/students/create">Add New Student</a>
		    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
		</div>
		
	</body>
</html>
