		<title>Instructors</title>

		<!-- Bootstrap -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    </head>
	<body>
		
		<nav class="navbar navbar-expand-sm bg-light navbar-light">
		  <ul class="navbar-nav">
		    <li class="nav-item active">
		      <a class="nav-link" href="/">Home</a>
		    </li>
		    <li class="nav-item active">
		      <a class="nav-link" href="/departments">Departments</a>
		    </li>
		    <li class="nav-item active">
		      <a class="nav-link" href="/instructors">Instructors</a>
		    </li>
		    <li class="nav-item active">
		      <a class="nav-link" href="/students">Students</a>
		    </li>
		    <li class="nav-item active">
		      <a class="nav-link" href="/sections">Sections</a>
		    </li>
		    <li class="nav-item active">
		      <a class="nav-link" href="/teaches">Teaches</a>
		    </li>
		  </ul>
		</nav>
		<div class="jumbotron">
		  <h1 style="text-align: center;">List of Instructors</h1><br><br>
	  	<form action="/instructors/search" method="get">
			<label for="fname">Enter Instructor Id to search for a particular Instructor:</label>
			<input type="text" id="fname" name="inst_id">
			<input type="submit" value="Search" class="btn btn-primary">
		</form>

    <table class="table table-striped">
    	<thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Salary</th>
      <th>Department Name</th>
      <th>Delete</th>
      <th>Update</th>
    </tr>
	</thead>
	<tbody>
    <% instructor.forEach((ins) => {%>
    <tr>
      <td><%=ins.id%></td>
      <td><%=ins.name%></td>
      <td>â‚¹ <%=ins.salary%></td>
      <td><a href="/instructors/<%=ins.department_name%>/department"><%=ins.department_name%></a></td>
      <td>
        <form action="/instructors/<%=ins.id%>/delete" method ="POST">
          <button class ="btn btn-danger">Delete</button>
        </form>
      </td>
      <td>
      	<form action="/instructors/<%=ins.id%>/update" method ="GET">
          <button class ="btn btn-primary">Update</button>
        </form>
      </td>
    </tr>
    <%})%>
    </tbody>
    </table>

    <a href="/instructors/create"><u>Add New Instructor</u></a>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
		</div>
		
	</body>
</html>
